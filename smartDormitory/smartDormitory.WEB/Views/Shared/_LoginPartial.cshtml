@using Microsoft.AspNetCore.Identity
@using smartDormitory.Data.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="d-flex flex-row">
     
        <div class="dropdown">
            <button type="button" id="userSettingsButton" class="mr-md-3 my-md-auto btn dropdown-toggle" data-toggle="dropdown">@UserManager.GetUserName(User)</button>
            <div class="dropdown-menu dropdown-menu-right">
                <div class="dropdown-item" href="#"><button class="btn my-2 my-sm-0" type="submit">Logout</button></div>
            </div>
        </div>
    </form>
}
else
{
    <form>
        <button asp-area="Identity" asp-page="/Account/Register" class="btn my-2 my-sm-0" type="submit" id="loginButton">Register</button>
        <button asp-area="Identity" asp-page="/Account/Login" class="btn my-2 my-sm-0" type="submit" id="loginButton">Login</button>
    </form>
}