@model List<SensorsViewModel>
@{
    ViewData["Title"] = "Sensors";
}
<h2>Sensors</h2>

<table class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th>Added On</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="4">No data available in table</td>
            </tr>
        }
        else
        {
            @foreach (var sensor in Model)
            {
                <tr>
                    <td class="sorting_1"><a asp-controller="Movies" asp-action="Details" asp-route-title="@sensor.Tag">@sensor.Tag</a></td>
                    <td>@sensor.SensorId</td>
                    <td>@sensor.MeasureType</td>
                    <td>@sensor.Value$</td>

                </tr>
            }
        }

    </tbody>
    <tfoot>
        <tr>
            <th>Tag</th>
            <th>SensorId</th>
            <th>MeasureType</th>
            <th>Value</th>
        </tr>
    </tfoot>
</table>

