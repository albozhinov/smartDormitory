@model SensorTypesViewModel
@{
    ViewData["Title"] = "AllSensorTypes";
}

@{
    var previousDisabled = Model.Page == 1 ? "disabled" : string.Empty;
    var nextDisabled = Model.Page == Model.TotalPages ? "disabled" : string.Empty;
}

<h2>AllSensorTypes</h2>


<nav class="navbar navbar-light bg-light">
    <form asp-action="AllSensorTypes" asp-controller="Sensors" method="GET" class="form-inline">
        <input asp-for="@Model.SearchText" class="form-control mr-sm-2" type="search" placeholder="Search sensor" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
</nav>

<table class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Tag</th>
            <th>Description</th>
            <th>MeasureType</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Sensors.Count() == 0)
        {
            <tr>
                <td colspan="4">No data available in table</td>
            </tr>
        }
        else
        {
            @foreach (var sensor in Model.Sensors)
            {
                <tr>
                    <td class="sorting_1"><a asp-controller="Sensors" asp-action="AllSensorTypes" asp-route-tag="@sensor.Tag">@sensor.Tag</a></td>
                    <td>@sensor.Description</td>
                    <td>@sensor.MeasureType.Type</td>
                    <td>@sensor.Value</td>

                </tr>
            }
        }

    </tbody>
    <tfoot>
        <tr>
            <th>Tag</th>
            <th>Description</th>
            <th>MeasureType</th>
            <th>Value</th>
        </tr>
    </tfoot>
</table>

<nav aria-label="Page navigation example" align="center">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link @previousDisabled" href="/Sensors/AllSensorTypes/?searchtext=@Model.SearchText&page=@Model.PreviousPage" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item"><a class="page-link" href="/Sensors/AllSensorTypes?searchtext=@Model.SearchText&page=@i">@i</a></li>
        }
        <li class="page-item">
            <a class="page-link @nextDisabled" href="/Sensors/AllSensorTypes/?searchtext=@Model.SearchText&page=@Model.NextPage" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</nav>
