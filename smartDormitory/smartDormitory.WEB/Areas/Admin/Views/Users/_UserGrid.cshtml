@model AllUsersViewModel

@{
    var previousDisabled = Model.Page == 1 ? "disabled" : string.Empty;
    var nextDisabled = Model.Page == Model.TotalPages ? "disabled" : string.Empty;
}

<nav class="navbar navbar-light bg-light">
    <form asp-area="Admin" asp-action="AllUsers" asp-controller="Users" method="GET" class="form-inline">
        <input asp-for="@Model.SearchText" class="form-control mr-sm-2" type="search" placeholder="Search user by name..." aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
</nav>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Settings</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Users.Count() == 0)
        {
            <tr>
                <td colspan="4">No data available in table</td>
            </tr>
        }
        else
        {

            foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <div class="btn-group">
                            <form asp-area="Admin" asp-controller="Users" asp-action="LockUser">
                                <div>
                                    <!--LOCK BUTTON-->
                                    <button type="button" class="btn p-1" id="lockButton" data-toggle="modal" data-target="#lockModal" data-whatever="@user.UserName" data-user-id="@user.Id"><img src="~/images/icons8-lock-24.png" /></button>
                                    @*<input class="text-hide" data-toggle="button" data-whatever="@user.Id" />*@
                                </div>
                            </form>

                            <form asp-area="Admin" asp-controller="Users" asp-action="UnlockUser">
                                <div class="ml-2">
                                    <!--UNLOCK BUTTON-->
                                    <button type="button" class="btn p-1" id="unlockButton" data-toggle="modal" data-target="#unlockModal" data-whatever="@user.UserName" data-user-id="@user.Id"><img src="~/images/icons8-padlock-24.png" /></button>
                                    @*<input class="text-hide" id="Id" value="@user.Id" />*@
                                </div>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<nav aria-label="Page navigation example" align="center">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link @previousDisabled" href="/Admin/Users/AllUsers/?searchtext=@Model.SearchText&page=@Model.PreviousPage" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item"><a class="page-link" href="/Admin/Users/AllUsers?searchtext=@Model.SearchText&page=@i">@i</a></li>
        }
        <li class="page-item">
            <a class="page-link @nextDisabled" href="/Admin/Users/AllUsers/?searchtext=@Model.SearchText&page=@Model.NextPage" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</nav>

<!-- Modal -->
<!-- Lock -->
<div class="modal fade" id="lockModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Manage user</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Include some text here!</p>
            </div>
            <div class="modal-footer">
                <form asp-area="Admin" asp-controller="Users" asp-action="LockUser" method="post">
                    <div>
                        <input class="text-hide" name="Id" />
                        <button type="submit" class="btn btn-danger">Lock user</button>
                    </div>
                </form>
                <button type="submit" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<!-- Unlock -->
<div class="modal fade" id="unlockModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Manage user</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Include here some text!</p>
            </div>
            <div class="modal-footer">
                <form asp-area="Admin" asp-controller="Users" asp-action="UnlockUser" method="post">
                    <div>
                        <input class="text-hide" name="Id" />
                        <button type="submit" class="btn btn-success">Unlock user</button>
                    </div>
                </form>
                <button type="submit" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

