@model UserAllSensorsModel
@{
    ViewData["Title"] = "MySensors";
}


@{
    var previousDisabled = Model.Page == 1 ? "disabled" : string.Empty;
    var nextDisabled = Model.Page == Model.TotalPages ? "disabled" : string.Empty;
    var counter = 1;
}

<nav class="navbar navbar-light bg-light">
    <form asp-area="UserManagement" asp-action="MySensors" asp-controller="User" method="GET" class="form-inline">
        <input asp-for="@Model.SearchText" class="form-control mr-sm-2" type="search" placeholder="Search user by name..." aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
</nav>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Number</th>
            <th>Name</th>
            <th>Description</th>
            <th>Current Value</th>
            <th>Access level</th>
            <th>Sensor Progress Bar</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.UserSensors.Count() == 0)
        {
            <tr>
                <td colspan="6">No data available in table</td>
            </tr>
        }
        else
        {



            @foreach (var userSensor in Model.UserSensors)
            {
                <tr>
                    <td>
                        @counter
                    </td>
                    <td>
                        @userSensor.Tag
                    </td>

                    <td>
                        @userSensor.Description
                    </td>

                    <td>
                        @userSensor.Value
                    </td>

                    <td>
                        @userSensor.IsPublic
                    </td>


                    <td>
                        @if (userSensor.Value < userSensor.MinValue || userSensor.Value > userSensor.MaxValue)
                        {
                            <div>danger</div>
                        }
                        else
                        {
                            <div class="container">
                                <div class="row">
                                    <div class="col">
                                        <div class="progress">
                                            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="10" aria-valuemin="10" aria-valuemax="20" style="width: @((userSensor.Value - userSensor.MinValue)*100/(userSensor.MaxValue - userSensor.MinValue))%"></div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        }
                    </td>
                </tr>

                counter++;


                <partial name="_MySensorGrid" for="@userSensor" />
            }
        }
    </tbody>
</table>

<!--PAGINATION LOGIC-->
<nav aria-label="Page navigation example" align="center">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link @previousDisabled" href="/UserManagement/User/MySensors/?searchtext=@Model.SearchText&page=@Model.PreviousPage" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item"><a class="page-link" href="/UserManagement/User/MySensors?searchtext=@Model.SearchText&page=@i">@i</a></li>
        }
        <li class="page-item">
            <a class="page-link @nextDisabled" href="/UserManagement/User/MySensors/?searchtext=@Model.SearchText&page=@Model.NextPage" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</nav>


<script>
    function a() {
        location.reload();


    };


    setInterval(a, 30000);

</script>

